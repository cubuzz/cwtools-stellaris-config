types = {
	## type_key_filter = song
	type[song] = {
		name_field = name
		path = "game/music"
	}

	## type_key_filter = music
	type[music] = {
		name_field = name
		path = "game/music"
		localisation = {
			name = "$"
		}
	}
}

music = {
	name = <song>
	file = scalar
	## cardinality 0..1
	volume = float
}

song = {
	name = scalar
}
